{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "semi": ["error", "always"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-console": "warn",
    "no-useless-catch": "off",
    "explicit-module-boundary-types": "off",
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ]
  }
}